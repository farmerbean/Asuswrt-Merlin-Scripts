#!/bin/sh

. /jffs/scripts/credentials.sh

push_message(){
    echo "Pushover Init"
    curl -s \
          --form-string "token=$pushover_token"\
          --form-string "user=$pushover_user"\
          --form-string "message=WAN Reconnect Successful"\
          https://api.pushover.net/1/messages.json
}

if [ "$2" = "connected" ]; then
   push_message
fi
